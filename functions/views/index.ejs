<body>
    <div class="page-wrapper bg-scavenger p-t-20">
        <div class="header-info wrapper wrapper--w500">
            <a href="/">
                <h2 class="title"><%=title%></h2>
                <h5 class="byUnidays">by UNiDAYS</h5>
            </a>
            <a href="https://www.myunidays.com/?utm_source=braindump&utm_medium=header&utm_campaign=braindump" class="appLink" onclick="trackAppClick()">
                <div class="linkUnidays">&nbsp;</div>
            </a>
            <div class="nav">
                <a href="/"><div class="nav-item">random</div></a>
                <% for(var i=0; i < categories.length; i++) { %>
                    <a href="/facts/<%=categories[i].category%>"><div class="category-<%=categories[i].category%> nav-item"><%=categories[i].category%></div></a>
                <% } %>
            </div>
        </div>
        
        
        <div  id="myCarousel" class="carousel slide carousel-fade wrapper wrapper--w500" data-ride="true" data-touch="true">
            <div class="carousel-inner">

                <% for(var i=0; i < facts.length; i++) { %>
                <div id="slide-<%=i%>" class="carousel-item card card-3 item <% if (i == 0) { %> active <% }%>" categories="<%=facts[i].categories%>">
                    
                    
                    <div class="card-body">
                        
                        
                        
                        <div class="fact-body">
                            <h3><%=facts[i].fact%></h3>

                            <div class="fact-buttons">
                                <div class="share-container">
                                    <div class="share-item share-message"><textarea placeholder="you can add a comment here that will only appear to the person you share with. Nifty!" id="share-text" rows="4" cols="50" class="share-text" name="fname"></textarea></div>
                                    <div class="share-button-container">
                                    <div class="pin-item pin" index="<%=i%>" >Pin</div>
                                    <div class="share-item noselect share fact-message fact-share" shareText="<%=facts[i].fact%>" factId="<%=facts[i].id%>" link="<%=facts[i].id%>">Pin & Share</div>
                                    </div>
                                </div>
                                <% if(facts[i].external){ %>
                                <a href="<%=facts[i].external%>" target="_blank"><div class="noselect fact-message fact-read" link="">ðŸ“– Read</div></a>
                                <% }%>
                            </div>
                            
                            
                        </div>
                    </div>
                    

                </div>
                <% } %>
            </div>
            
        </div>
    </div> 
    <div class="scroll-buttons-container">
        <div class="scroll-buttons">
            <a href="#myCarousel" data-slide="prev"><div class="scroll-button scroll-button-left"> ðŸ‘ˆ </div></a>
            <a href="#myCarousel" data-slide="next"><div class="scroll-button scroll-button-right"> ðŸ‘‰ </div></a>
        </div>


    </div> 
      

